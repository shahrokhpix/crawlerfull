# ========================================
# تنظیمات دیتابیس PostgreSQL
# ========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=crawler_db
DB_USER=crawler_user
DB_PASSWORD=your_secure_password_here

# ========================================
# تنظیمات Redis
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# تنظیمات برنامه
# ========================================
NODE_ENV=production
PORT=3004
TZ=Asia/Tehran

# ========================================
# تنظیمات احراز هویت
# ========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# ========================================
# تنظیمات کرالر
# ========================================
CRAWLER_TIMEOUT=30000
CRAWLER_CONCURRENT_LIMIT=3
CRAWLER_RETRY_ATTEMPTS=3
CRAWLER_DELAY_BETWEEN_REQUESTS=1000

# ========================================
# تنظیمات WebDriver
# ========================================
WEBDRIVER_TYPE=playwright
WEBDRIVER_HEADLESS=true
WEBDRIVER_TIMEOUT=30000

# ========================================
# تنظیمات لاگ
# ========================================
LOG_LEVEL=info
LOG_FILE_SIZE=10MB
LOG_MAX_FILES=5

# ========================================
# تنظیمات Load Balancer
# ========================================
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_CPU_THRESHOLD=70
LOAD_BALANCER_MEMORY_THRESHOLD=75

# ========================================
# تنظیمات امنیتی
# ========================================
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# تنظیمات Docker
# ========================================
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK_NAME=crawler_network

# ========================================
# تنظیمات SSL (برای production)
# ========================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ========================================
# تنظیمات مانیتورینگ
# ========================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3

# ========================================
# تنظیمات پاک‌سازی
# ========================================
CLEANUP_OLD_ARTICLES_DAYS=30
CLEANUP_OLD_LOGS_DAYS=7
CLEANUP_INTERVAL_HOURS=24