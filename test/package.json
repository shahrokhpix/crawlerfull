{
  "name": "farsnews-stress-tests",
  "version": "1.0.0",
  "description": "Stress testing suite for FarsNews crawler system",
  "main": "stress-test.js",
  "scripts": {
    "test": "node quick-test.js",
    "stress": "node stress-test.js",
    "stress:full": "node stress-test.js --full",
    "stress:advanced": "node advanced-stress-test.js",
    "stress:specialized": "node specialized-tests.js",
    "stress:crawl": "node stress-test.js --crawl",
    "stress:database": "node stress-test.js --database",
    "stress:memory": "node stress-test.js --memory",
    "stress:admin": "node stress-test.js --admin",
    "stress:load-balancer": "node stress-test.js --load-balancer",
    "stress:websocket": "node stress-test.js --websocket",
    "stress:circuit-breaker": "node stress-test.js --circuit-breaker",
    "test:all": "npm run test && npm run stress:full && npm run stress:advanced && npm run stress:specialized",
    "clean": "rm -rf results/*.json",
    "clean:windows": "del /Q results\\*.json"
  },
  "keywords": [
    "stress-test",
    "performance",
    "load-testing",
    "crawler",
    "news",
    "farsnews"
  ],
  "author": "FarsNews Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/farsnews/crawler-system.git"
  },
  "bugs": {
    "url": "https://github.com/farsnews/crawler-system/issues"
  },
  "homepage": "https://github.com/farsnews/crawler-system#readme"
} 